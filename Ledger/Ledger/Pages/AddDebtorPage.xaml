<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Ledger.ViewModels"
             x:Class="Ledger.Pages.AddDebtorPage"
             x:DataType="vm:AddDebtorViewModel">

    <ContentPage.BindingContext>
        <vm:AddDebtorViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="35" Padding="100">
        <Label Text="Add Deptor"
       FontSize="104"
       HorizontalOptions="Center" />

        <Entry Placeholder="Name"
               FontSize="18"
               WidthRequest="1000"
               Margin="0"/>

        <Entry Placeholder="Initial value"
               FontSize="18"
               WidthRequest="1000"
               Margin="0"/>

        <Grid ColumnDefinitions="*,*,*,*">

            <Button Text="Save"
                    Grid.Column="1"
                    FontSize="36"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    CornerRadius="10"/>

            <Button Text="Cancel"
                    Grid.Column="2"
                    FontSize="36"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    CornerRadius="10"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
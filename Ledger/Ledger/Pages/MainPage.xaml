<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Ledger.Pages.MainPage"
    Title="MainPage">
    <Grid
        ColumnDefinitions="*, *"
        RowDefinitions="100, *">
        <Label
            Text="Debtors"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="24" />
        <VerticalStackLayout
            Grid.Column="0"
            Grid.Row="1">

        </VerticalStackLayout>
        <Button
            Grid.Column="1"
            Grid.Row="1"
            Clicked="OnAddDebtor"
            WidthRequest="200"
            HeightRequest="60"
            VerticalOptions="Start"
            Text="Add debtor"
            FontSize="16"
            BackgroundColor="#61AFEF" />
    </Grid>
</ContentPage>
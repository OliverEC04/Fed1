<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Ledger.ViewModels"
    x:Class="Ledger.Pages.DebtorListPage"
    x:DataType="viewModels:DebtorListViewModel"
    Title="DebtorListPage"
    >
    <VerticalStackLayout>
        <!-- Add a button to go back to the main page -->
        <!--<Button
            Text="Back"
            Clicked="OnBackButtonClicked"
            Padding="40, 40, 40, 0"
            FontSize="25"
            />-->

        <!-- Add a grid to hold info about the debtor -->
        <Label
            Text="Name of debtor" 
            Padding="40, 0, 0, 40"
            Style="{StaticResource TitleLabelStyle}"
            />
        <!--FontSize="25"-->

        <Grid ColumnDefinitions="200, 200">

            <Label Text="Date" Padding="40, 0, 0, 0" Style="{StaticResource LedgerText}"/>
            <Label Text="Amount" Grid.Column="1" Padding="40, 0, 0, 0" Style="{StaticResource LedgerText}"/>

        </Grid>

    </VerticalStackLayout>
</ContentPage>